## Entering list context for all list mappings should be safe.
__mkelvis_enter_list_ctx
{% endif %}
for val in ${{ inline.variable|ns }}; do
	__mkelvis_inline_variable "$val" {{ inline.keyword }}
done
{% if loop.last %}
__mkelvis_exit_list_ctx
{% endif %}
{% endfor %}
