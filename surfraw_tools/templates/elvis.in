{% macro collapse_variable(var, branches) %}
it="${{ var }}"
case "$it" in
	{% for branch in branches %}
	{# Last in `branch` is the result #}
	{{ '|'.join(branch[:-1]) }}) {{ var }}="{{ branch[-1] }}" ;;
	{% endfor %}
